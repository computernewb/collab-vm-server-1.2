{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19
  },

  "configurePresets": [
    {
      "name": "ci-release",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "clang-14",
        "CMAKE_CXX_COMPILER": "clang++-14",
        "COLLABVM_LINKER": "mold"
      }
    },

    {
      "name": "ci-debug",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "clang-14",
        "CMAKE_CXX_COMPILER": "clang++-14",
        "COLLABVM_LINKER": "mold"
      }
    },

    {
      "name": "ci-debug-asan",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "clang-14",
        "CMAKE_CXX_COMPILER": "clang++-14",
        "COLLABVM_BUILD_FEATURES": "asan",
        "COLLABVM_LINKER": "mold"
      }
    },

    {
      "name": "ci-debug-tsan",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "clang-14",
        "CMAKE_CXX_COMPILER": "clang++-14",
        "COLLABVM_BUILD_FEATURES": "tsan",
        "COLLABVM_LINKER": "mold"
      }
    },

    {
      "name": "ci-debug-ubsan",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "clang-14",
        "CMAKE_CXX_COMPILER": "clang++-14",
        "COLLABVM_BUILD_FEATURES": "ubsan",
        "COLLABVM_LINKER": "mold"
      }
    },

    {
      "name": "release",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },

    {
      "name": "debug",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },

    {
      "name": "debug-asan",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "COLLABVM_BUILD_FEATURES": "asan"
      }
    },

    {
      "name": "debug-tsan",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "COLLABVM_BUILD_FEATURES": "tsan"
      }
    },

    {
      "name": "debug-ubsan",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "COLLABVM_BUILD_FEATURES": "tsan"
      }
    }
  ]
}